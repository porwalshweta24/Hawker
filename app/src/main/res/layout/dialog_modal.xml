                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <app.com.hawker.AppFonts.TextViewSemiBoldOpensans
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Line3: "
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <app.com.hawker.AppFonts.TextViewRegularOpensans
                android:id="@+id/tv_line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <app.com.hawker.AppFonts.TextViewSemiBoldOpensans
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="City: "
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <app.com.hawker.AppFonts.TextViewRegularOpensans
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <app.com.hawker.AppFonts.TextViewSemiBoldOpensans
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="State: "
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <app.com.hawker.AppFonts.TextViewRegularOpensans
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>