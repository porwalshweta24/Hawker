<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_16"
            android:background="@color/white"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="@color/black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"

                android:orientation="horizontal">

                <app.com.hawker.AppFonts.TextViewSemiBoldOpensans
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="  Please choose your employment:"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_16" />

                <ImageButton
                    android:id="@+id/imgCloseImagePopUp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:background="@android:color/transparent"
                    android:paddingLeft="10dp"
                    android:src="@drawable/delete_image" />

            </LinearLayout>


            <ListView
                android:id="@+id/listView_info_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:focusable="true"
                android:cacheColorHint="@android:color/transparent"></ListView>


        </LinearLayout>
</RelativeLayout>