<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            android:clipToPadding="true" >

            <LinearLayout
                android:id="@+id/rootLayout_subscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <app.com.hawker.AppFonts.TextViewSemiBoldOpensans
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Subs Id: "
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <app.com.hawker.AppFonts.TextViewRegularOpensans
                        android:id="@+id/tv_subsid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <app.com.hawker.AppFonts.TextViewSemiBoldOpensans
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Prod Id: "
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <app.com.hawker.AppFonts.TextViewRegularOpensans
                        android:id="@+id/tv_prod_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <app.com.hawker.AppFonts.TextViewSemiBoldOpensans
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Prod Name: "
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <app.com.hawker.AppFonts.TextViewRegularOpensans
                        android:id="@+id/tv_prod_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <app.com.hawker.AppFonts.TextViewSemiBoldOpensans
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Product Type: "
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <app.com.hawker.AppFonts.TextViewRegularOpensans
                        android:id="@+id/tv_productType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <app.com.hawker.AppFonts.TextViewSemiBoldOpensans
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Subs Type: "
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <app.com.hawker.AppFonts.TextViewRegularOpensans
                        android:id="@+id/tv_subsType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <app.com.hawker.AppFonts.TextViewSemiBoldOpensans
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Freq: "
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <app.com.hawker.AppFonts.TextViewRegularOpensans
                        android:id="@+id/tv_freq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>